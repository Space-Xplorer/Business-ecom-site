
<% layout("/layouts/boilerplate") -%>

<h2 class="mb-4">All Products</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% products.forEach(p => { %>
    <div class="col">
      <div class="card h-100 shadow-sm">
        <% if (p.photos && p.photos.length > 0) { %>
          <img src="<%= p.photos[0] %>" class="card-img-top" alt="<%= p.name %>" style="height: 200px; object-fit: cover;">
        <% } else { %>
          <img src="https://via.placeholder.com/300x200?text=No+Image" class="card-img-top" alt="No Image">
        <% } %>
        <div class="card-body">
          <h5 class="card-title"><%= p.name %></h5>
          <p class="card-text text-muted">â‚¹<%= p.price %></p>
          <% if (p.description) { %>
            <p class="card-text"><%= p.description.substring(0, 100) %>...</p>
          <% } %>
          <p class="card-text">
            <small>Stock: <%= p.stock %></small><br>
            <% if (p.sizesAvailable.length > 0) { %>
              <small>Sizes: <%= p.sizesAvailable.join(', ') %></small><br>
            <% } %>
            <% if (p.colors.length > 0) { %>
              <small>Colors: <%= p.colors.join(', ') %></small>
            <% } %>
          </p>
        </div>
        <div class="card-footer d-flex justify-content-between">
          <a href="/products/<%= p._id %>/edit" class="btn btn-sm btn-outline-primary">Edit</a>
          <form action="/products/<%= p._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this product?')">
            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
          </form>
        </div>
      </div>
    </div>
  <% }) %>
</div>

