<% layout("/layouts/boilerplate") -%>
<body class="bg-light">
  <div class="container py-4">
    <h1 class="h3 mb-4">All Subcategories</h1>
    <% if (subcategories && subcategories.length > 0) { %>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        <% subcategories.forEach(sub => { %>
          <div class="col">
            <a href="/subcategory/<%= sub._id %>/products" class="text-decoration-none">
              <div class="card h-100 text-white bg-dark" style="cursor: pointer;">
                <div class="card-body d-flex align-items-center justify-content-center">
                  <h5 class="card-title mb-0"><%= sub.name %></h5>
                </div>
              </div>
            </a>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="alert alert-info">No subcategories found.</div>
    <% } %>
  </div>
</body>
