<% layout("/layouts/boilerplate") -%>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<style>
  body {
    background-color: #f8f9fa; /* Light background for the page */
  }
  .category-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    border: none;
    border-radius: 12px; /* Rounded corners for cards */
    overflow: hidden; /* Ensure content stays within rounded corners */
    background: linear-gradient(135deg, #ffffff, #f0f2f5); /* Subtle gradient */
  }
  .category-card:hover {
    transform: translateY(-8px); /* Lift card on hover */
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1); /* More prominent shadow on hover */
  }
  .category-card .card-body {
    padding: 3rem 1.5rem; /* More vertical padding */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .category-card .card-title {
    font-weight: 700; /* Bolder text for titles */
    color: #343a40; /* Darker text color */
    margin-top: 1rem; /* Space between icon and text */
  }
  .icon-wrapper {
    font-size: 3.5rem; /* Larger icon size */
    color: #007bff; /* Primary blue color for icons */
    margin-bottom: 0.5rem;
  }
</style>

<div class="container my-5">
  <div class="text-center mb-5">
    <h1 class="display-4 fw-bold text-dark">Explore Our Collections</h1>
    <p class="lead text-muted">Select a main category to discover amazing products.</p>
  </div>

  <div class="row justify-content-center">
    <% fixedMainCategories.forEach(cat => { %>
      <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
        <a href="/categories/<%= cat.toLowerCase() %>" class="text-decoration-none">
          <div class="card shadow category-card">
            <div class="card-body">
              <div class="icon-wrapper">
                <%
                  // Simple logic to choose an icon based on category name
                  let iconClass = 'fas fa-tshirt'; // Default icon
                  switch(cat.toLowerCase()) {
                    case 'men': iconClass = 'fas fa-male'; break;
                    case 'women': iconClass = 'fas fa-female'; break;
                    case 'kids': iconClass = 'fas fa-child'; break;
                    case 'electronics': iconClass = 'fas fa-laptop'; break;
                    case 'home & living': iconClass = 'fas fa-couch'; break;
                    case 'accessories': iconClass = 'fas fa-glasses'; break;
                    // Add more cases for your specific categories
                  }
                %>
                <i class="<%= iconClass %>"></i>
              </div>
              <h4 class="card-title text-capitalize"><%= cat %></h4>
            </div>
          </div>
        </a>
      </div>
    <% }) %>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
